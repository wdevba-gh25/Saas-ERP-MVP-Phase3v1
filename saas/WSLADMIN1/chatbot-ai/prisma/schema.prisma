generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conversation {
  id        String   @id @default(uuid())
  projectId String
  userId    String
  question  String
  answer    String
  createdAt DateTime @default(now())

  @@index([projectId, createdAt])
}
